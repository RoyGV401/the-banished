{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.rev.aim": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"transitions": [
						{
							"first_person_aim": "(query.is_sneaking == 1)"
						}
					],
					"blend_transition": 0.1,
					"blend_via_shortest_path": true
				},
				"first_person_aim": {
					"animations": [
						{
							"first_person_aim": 1
						}
					],
					"transitions": [
						{
							"first_person": "(query.is_sneaking == 0)"
						}
					],
					"blend_transition": 0.1,
					"blend_via_shortest_path": true
				}
			}
		}
	}
}