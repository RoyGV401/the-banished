{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.musket.fire": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"transitions": [
						{
							"fire": "(query.cooldown_time_remaining('slot.weapon.mainhand')>=0.01)"
						},
						{
							"sprint": "query.is_sprinting == 1"
						}
					],
					"blend_transition": 0.1,
					"blend_via_shortest_path": true
				},
				"fire": {
					"animations": [
						{
							"fire": 1
						}
					],
					"transitions": [
						{
							"first_person": "(query.cooldown_time_remaining('slot.weapon.mainhand')<0.02)"
						}
					],
					"blend_transition": 0.2,
					"blend_via_shortest_path": true
				},
				"sprint": {
					"animations": [
						{
							"sprint": 1
						}
					],
					"transitions": [
	
						{
							"first_person": "(query.cooldown_time_remaining('slot.weapon.mainhand')>=0.01) || query.is_sprinting == 0"
						},
						{
							"jump": "query.is_on_ground == 0"
						}
					],
					"blend_transition": 0.14,
					"blend_via_shortest_path": true
				},
				"jump": {
					"animations": [
						{
							"jump": 1
						}
					],
					"transitions": [
	
						{
							"first_person": "(query.cooldown_time_remaining('slot.weapon.mainhand')>=0.01) || (query.is_on_ground == 1 && query.is_jumping == 0) || query.is_sprinting == 0"
						}
					],
					"blend_transition": 0.14,
					"blend_via_shortest_path": true
				}
			}
		},
		"controller.animation.musket.reload": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"transitions": [
						{
							"reload": "(query.cooldown_time_remaining('slot.weapon.mainhand')>5)"
						}
					]
				},
				"reload": {
					"animations": [
						{
							"reload": 1
						}
					],
					"transitions": [
						{
							"first_person": "query.cooldown_time_remaining('slot.weapon.mainhand')<0.01"
						}
					],
					"blend_transition": 0.5,
					"blend_via_shortest_path": true
				}
			}
		},
		"controller.animation.auto_gun.reload": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"transitions": [
						{
							"reload": "(query.cooldown_time_remaining('slot.weapon.mainhand')>2.5)"
						}
					]
				},
				"reload": {
					"animations": [
						{
							"reload": 1
						}
					],
					"transitions": [
						{
							"first_person": "query.cooldown_time_remaining('slot.weapon.mainhand')<0.01"
						}
					],
					"blend_transition": 0.5,
					"blend_via_shortest_path": true
				}
			}
		}
	}
}