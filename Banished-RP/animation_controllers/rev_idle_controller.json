{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.rev.idle": {
			"initial_state": "idling",
			"states": {
				"idling": {
					"transitions": [
						{
							"not_idling": "(query.is_moving == 1) || (c.owning_entity -> q.is_using_item)"
						}
					],
					"animations": [
						{
							"idling": 1
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				},
				"not_idling": {
					
					"transitions": [
						{
							"idling": "(query.is_moving == 0)"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				}
			}
		}
	}
}